# /etc/rc.local
#
# This file is executed after /etc/rc and consist of local customizations.

# christen ourselves
hostname shiva

# enable screen blanking
setterm -blank 5

# quiet floppy chatter
setfdprm -n /dev/fd0
setfdprm -n /dev/fd1

if [ -f /etc/rc.net ]
then
	/etc/rc.net
	# now we can safely mount our NFS filesystems, if any
	mount -avt nfs
fi
