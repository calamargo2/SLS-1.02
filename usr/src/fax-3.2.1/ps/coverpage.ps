%! 
% %W% %G% %U%
%
% Cover page for AI lab fax transmissions.
%
% It is made to be used by defining some string vars, and then loading
% this file. That way ppm1run will work correctly with it.
%
% To use def the following string variables before loading this file:
%   /returnfaxnum 
%   /sender
%   /recipient
%   /pages 

/F { findfont exch scalefont setfont} def

/rect % left top right bottom
 { /bottom exch def
   /right exch def
   /top exch def
   /left exch def
   right bottom moveto
   right top lineto
   left top lineto
   left bottom lineto
   right bottom lineto
  } def

/defaultfaxnum (617 253 5060) def


/csshow { % string -- shows a centered string
	dup stringwidth pop neg  2 div 0  rmoveto show } def

/coverblock { 0 setgray
	36 720 moveto 7.5 72 mul 0 rlineto stroke
	36 690 moveto 7.5 72 mul 0 rlineto stroke
	12 /Times-Roman F
	36 700 moveto
	8 0 (MASSACHUSETTS INSTITUTE OF TECHNOLOGY) ashow
	0 setgray
	24 /Times-Roman F
	288 664 moveto (ARTIFICIAL) csshow
	288 640 moveto (INTELLIGENCE) csshow
	288 616 moveto (LABORATORY) csshow		

	} def

/coverpage { 
	coverblock
	120 550 moveto
	0 setgray
	/recipient where
	 {	(To: ) show
		 recipient show } if % recipient
	120 500 moveto
	 % sender's name
	/sender where { (From: ) show
			     sender show } if
	120 450 moveto
	/returnfaxnum where { (Fax Reply To: ) show % return fax number
			       returnfaxnum show } if
	120 400 moveto
	/pages where {	(Page 1 of ) show
		         pages (xxxxxxxxxx) cvs show} if

	12 /Times-Roman F
	288 236 moveto
	(MIT Artificial Intelligence Laboratory) csshow
	288 224 moveto
	(545 Technology Square, Cambridge MA 02139) csshow
	120 190 moveto
	(Sent by the AI Lab online fax transmission system) show
	120 170 moveto
	(Send bugs, questions to bug-fax@ai.mit.edu ) show
	

	} def

coverpage
showpage


